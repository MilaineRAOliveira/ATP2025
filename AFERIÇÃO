    "#2.a)\n",
    "\n",
    "def split_lista(lista, n):\n",
    "    lista1 = []\n",
    "    lista2 = []\n",
    "    for elemento in lista:\n",
    "        if elemento % n == 0:\n",
    "            lista1.append(elemento)\n",
    "        else:\n",
    "            lista2.append(elemento)\n",
    "    return (lista1, lista2)\n",
    "\n",
    "print(split_lista([1, 2, 3, 4, 5], 2))"
   ]
