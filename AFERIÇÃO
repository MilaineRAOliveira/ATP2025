    "# 1.a)\n",
    "\n",
    "def contar_ocorrencias(lista, elemento):\n",
    "    contador = 0\n",
    "    if lista == []:\n",
    "        return 0\n",
    "    if lista[0] > elemento:\n",
    "        contador = contador + 1\n",
    "    return contador + contar_ocorrencias(lista[1:], elemento)\n",
    "\n",
    "print(contar_ocorrencias([1, 2, 3, 2, 4, 2], 2))  "
   ]
