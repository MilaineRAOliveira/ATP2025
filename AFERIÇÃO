    "#1.c) \n",
    "\n",
    "def mergeListas(lista1, lista2):\n",
    "    if lista1 == []:\n",
    "        return lista2\n",
    "    if lista2 == []:\n",
    "        return lista1\n",
    "    if lista1[0] < lista2[0]:\n",
    "        return [lista1[0]] + mergeListas(lista1[1:], lista2)\n",
    "    else:\n",
    "        return [lista2[0]] + mergeListas(lista1, lista2[1:])\n",
    "    \n",
    "print(mergeListas([1, 3, 5], [2, 4, 6]))"
   ]
  },
