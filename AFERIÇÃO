    "# 1.b)\n",
    "\n",
    "def disjuntas(lista1, lista2):\n",
    "    res = False\n",
    "    if lista1 == [] or lista2 == []:\n",
    "        return True\n",
    "    if lista1[0] in lista2:\n",
    "        res = True\n",
    "    return not res and disjuntas(lista1[1:], lista2)\n",
    "\n",
    "print(disjuntas([1, 2, 3], [4, 5, 6]))"
   ]
  },
