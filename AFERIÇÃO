    "#2.c) \n",
    "\n",
    "def max2prod(lista):\n",
    "    if len(lista) < 2:\n",
    "        return None\n",
    "    lista.sort()\n",
    "    prod = lista[-1] * lista[-2]\n",
    "    return prod\n",
    "\n",
    "print(max2prod([5, 3, 2, 4, 1]))"
   ]
