    "#3.d) \n",
    "\n",
    "def existe_medico(hospital, unidade_nome, medico_nome):\n",
    "    res = False\n",
    "    for unidade in hospital:\n",
    "        if unidade[0] == unidade_nome:\n",
    "            for medico in unidade[1]:\n",
    "                if medico[1] == medico_nome:\n",
    "                    res = True\n",
    "    return res\n",
    "\n",
    "print(existe_medico(hospital, \"Unidade de Cardiologia\", \"Dra. Milaine\"))\n",
